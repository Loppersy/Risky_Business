<Window x:Class="Risky_Business.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Risky_Business"
        mc:Ignorable="d"
        Title="Risky Business" Height="500" Width="700">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <ContentControl Content="{Binding SelectedViewModel}"/>

                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Name="IntroButton" Margin="10" Width="200" Content="Back" Command="{Binding UpdateViewCommand}" CommandParameter="Intro"
                            Click="IntroButtonPressed" IsEnabled="False"/>
                    <Button Name="AnalysisButton" Margin="10" Width="200" Content="ANALYSE!" Command="{Binding UpdateViewCommand}" CommandParameter="Analysis"
                            Click="AnalyseButtonPressed" IsEnabled="False"/>
                </StackPanel>
            </Grid>
    
</Window>

